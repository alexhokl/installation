}

install_gh() {
	_CURRENT_DIR=$PWD

	git clone https://github.com/cli/cli.git $HOME/git/githubcli
	cd $HOME/git/githubcli
	make
	cp ./bin/gh $HOME/git/bin/

	cd $_CURRENT_DIR
}
